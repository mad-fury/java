import java.util.*;  
class Main{
    public static void main(String ...a){
    int i=0,temp=0,j;
    Scanner sc= new Scanner(System.in);
    System.out.print("Enter the number of rows for half pyramid: ");  
    int n= sc.nextInt();  
    for(i=1;i<=n;i++){
		    for(j=1;j<=i;j++){
                     System.out.print("*");
		    }
		System.out.println("");
	    }
    }
}
